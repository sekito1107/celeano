<div class="auth-page">
  <%= render AuthLogoComponent.new %>

  <%= form_with model: @user, url: registration_path, class: "auth-form" do |form| %>
    <div class="auth-form__header">
      <h2 class="auth-form__title">Request Clearance</h2>
      <div class="sanity-indicator">New Investigator</div>
    </div>

    <% if @user.errors.any? %>
      <div class="flash flash--alert flash--spaced" role="alert">
        <% @user.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, "Codename" %>
      <div class="input-wrapper">
        <span class="input-icon" aria-hidden="true">ðŸ‘¤</span>
        <%= form.text_field :name,
                            required: true,
                            autofocus: true,
                            autocomplete: "name",
                            placeholder: "Enter your codename..." %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :email_address, "Identifier" %>
      <div class="input-wrapper">
        <span class="input-icon" aria-hidden="true">ðŸ“§</span>
        <%= form.email_field :email_address,
                             required: true,
                             autocomplete: "email",
                             placeholder: "your@email.com" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :password, "Passphrase" %>
      <div class="input-wrapper">
        <span class="input-icon" aria-hidden="true">ðŸ”‘</span>
