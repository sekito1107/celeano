<div class="auth-page">
  <%= render AuthLogoComponent.new %>

  <%= form_with url: session_path, class: "auth-form" do |form| %>
    <div class="auth-form__header">
      <h2 class="auth-form__title">Investigator Login</h2>
      <div class="sanity-indicator">Sanity Stable</div>
    </div>

    <%= render FormInputComponent.new(
      form: form,
      field: :email_address,
      label: "Identifier",
      icon: "ðŸ‘¤",
      type: :email,
      required: true,
      autofocus: true,
      autocomplete: "username",
      placeholder: "your@email.com",
      value: params[:email_address]
    ) %>

    <%= render FormInputComponent.new(
      form: form,
      field: :password,
      label: "Passphrase",
      icon: "ðŸ”‘",
      type: :password,
      required: true,
      autocomplete: "current-password",
      placeholder: "â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢",
      maxlength: 72
    ) %>

    <div class="auth-links">
      <label style="display: flex; align-items: center; gap: 4px; color: #4b5563; cursor: pointer;">
        <%= form.check_box :remember_me, style: "width: auto; margin: 0;" %> Keep Gate Open
      </label>
      <%= link_to "Lost Knowledge?", new_password_path %>
    </div>

    <%= form.submit "Access Archive", class: "btn btn-primary" %>
    
    <div style="margin-top: 1rem; text-align: center; font-size: 0.65rem; color: #374151; letter-spacing: 0.1em; text-transform: uppercase;">
      Miskatonic University Network
    </div>
  <% end %>

  <div class="auth-footer">
    <%= link_to "Request New Clearance", new_registration_path, class: "btn-text" %>
  </div>
</div>
