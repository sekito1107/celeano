<div class="auth-page">
  <%= render AuthLogoComponent.new %>

  <%= form_with url: passwords_path, class: "auth-form" do |form| %>
    <div class="auth-form__header">
      <h2 class="auth-form__title">Lost Knowledge?</h2>
    </div>

    <%= render FormInputComponent.new(
      form: form,
      field: :email_address,
      label: "Identifier",
      icon: "ðŸ‘¤",
      type: :email,
      required: true,
      autofocus: true,
      autocomplete: "username",
      placeholder: "your@email.com",
      value: params[:email_address]
    ) %>

    <%= form.submit "Send Recovery Sigil", class: "btn btn-primary" %>

    <div class="auth-links auth-links--centered">
      <%= link_to "Return to Archive", new_session_path %>
    </div>
  <% end %>
</div>
