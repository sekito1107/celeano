<div class="card-wrapper card-interactive" data-controller="card">
  <div class="<%= frame_class %>">
    
    <%# --- Cost Orb --- %>
    <div class="stat-orb cost-orb">
      <%= cost %>
    </div>
  
    <%# --- Card Art --- %>
    <div class="card-art">
      <% if image_name.present? %>
        <%#= image_tag "cards/#{image_name}", class: "art-image" %>
        <div class="art-placeholder"><%= image_name %></div>
      <% else %>
        <div class="art-placeholder">ÁîªÂÉè„Å™„Åó</div>
      <% end %>

      <%# Poison Effect Overlay %>
      <% if poisoned? %>
        <div class="status-effect-overlay effect-poison"></div>
      <% end %>
    </div>

    <%# --- Text Box --- %>
    <div class="card-textbox">
      <div class="card-name"><%= name %></div>
      <div class="card-description">
        <%= simple_format(text) %>
      </div>
    </div>

    <%# --- Badges (Keywords) --- %>
    <div class="badges-container">
      <% if guardian? %>
        <div class="keyword-badge">üõ°Ô∏è</div>
      <% end %>
      <% if haste? %>
        <div class="keyword-badge">‚ö°</div>
      <% end %>
    </div>

    <%# --- Stats Orbs (Unit Only) --- %>
    <% if unit? %>
      <div class="stat-orb attack-orb <%= attack_buffed? ? 'text-buffed' : '' %>">
        <%= total_attack %>
      </div>
      
      <div class="stat-orb hp-orb <%= damaged? ? 'text-damaged' : '' %>">
        <%= hp %>
      </div>
    <% end %>

  </div>
</div>
