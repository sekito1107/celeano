<div class="hand-container" data-controller="hand">
  <% if viewer_is_owner? %>
    <% cards.each do |game_card| %>
      <div class="hand-card-wrapper">
        <%= render Game::CardComponent.new(card_entity: game_card) %>
      </div>
    <% end %>
  <% else %>
    <% count = cards.count %>
    <% count.times do |i| %>
      <div class="hand-card-wrapper opponent-card" style="--i: <%= i %>; --total: <%= count %>;">
        <div class="card-back"></div>
      </div>
    <% end %>
  <% end %>
</div>
